<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="classic-models">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>
            com.example.template.model.Customer
        </class>
        <class>
            com.example.template.model.Employee
        </class>
        <class>
            com.example.template.model.Office
        </class>
        <class>
            com.example.template.model.Order
        </class>
        <class>
            com.example.template.model.OrderDetail
        </class>
        <class>
            com.example.template.model.Payment
        </class>
        <class>
            com.example.template.model.Product
        </class>
        <class>
            com.example.template.model.ProductLine
        </class>
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/classicmodels"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="Palm123456za"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
        </properties>
    </persistence-unit>
</persistence>